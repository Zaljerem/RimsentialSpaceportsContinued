<?xml version="1.0" encoding="utf-8" ?>
<Patch>


<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Transport Shuttle Standalone</li>
        </mods>
		
        <match Class="PatchOperationSequence">
            <!--<success>Always</success>-->
            <operations>

       		

<li Class="PatchOperationAdd">
  <xpath>/Defs/ThingDef[defName="TransportShuttle"]/building</xpath>
  <value>
   <isEdifice>false</isEdifice>
  </value>
</li>

<li Class="PatchOperationRemove">
  <xpath>/Defs/ThingDef[defName="TransportShuttle"]/fillPercent</xpath> 
</li>

<li Class="PatchOperationAdd">
  <xpath>/Defs/ThingDef[defName="TransportDrone"]/building</xpath>
  <value>
   <isEdifice>false</isEdifice>
  </value>
</li>

<li Class="PatchOperationRemove">
  <xpath>/Defs/ThingDef[defName="TransportDrone"]/fillPercent</xpath> 
</li>

</operations>
</match>
</Operation>

</Patch>